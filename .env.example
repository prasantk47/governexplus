# GRC Zero Trust Platform - Environment Configuration
# Copy this file to .env and update values for your environment

# ==================== Application ====================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== API Settings ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=*
LOG_LEVEL=INFO

# ==================== Database ====================
DATABASE_URL=postgresql://grc_user:grc_password@localhost:5432/grc_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grc_platform
DB_USER=grc_user
DB_PASSWORD=grc_password
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== SAP Connection ====================
# SAP ECC/S4HANA RFC Connection
SAP_ASHOST=sap-server.company.com
SAP_SYSNR=00
SAP_CLIENT=100
SAP_USER=SAP_RFC_USER
SAP_PASSWORD=
SAP_LANG=EN
SAP_POOL_SIZE=5

# SAP REST API (optional)
SAP_API_URL=https://sap-api.company.com
SAP_API_USER=
SAP_API_PASSWORD=

# ==================== Azure AD ====================
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# ==================== Okta ====================
OKTA_DOMAIN=your-company.okta.com
OKTA_API_TOKEN=your-api-token
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=

# ==================== Workday ====================
WORKDAY_TENANT_URL=https://impl.workday.com/your-company
WORKDAY_USERNAME=
WORKDAY_PASSWORD=

# ==================== SuccessFactors ====================
SF_API_URL=https://api.successfactors.com
SF_COMPANY_ID=your-company-id
SF_USERNAME=
SF_PASSWORD=

# ==================== Email/SMTP ====================
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=grc-platform@company.com
SMTP_FROM_NAME=GRC Platform
SMTP_USE_TLS=true

# ==================== Slack ====================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_BOT_TOKEN=xoxb-your-token

# ==================== Microsoft Teams ====================
TEAMS_WEBHOOK_URL=https://company.webhook.office.com/webhookb2/xxx

# ==================== Multi-Tenancy ====================
DEFAULT_TENANT_ID=default
TENANT_HEADER_NAME=X-Tenant-ID
ENABLE_MULTI_TENANCY=true

# ==================== Security ====================
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ==================== Audit ====================
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_SENSITIVE_FIELDS=password,secret,token,key

# ==================== Feature Flags ====================
ENABLE_AI_FEATURES=true
ENABLE_ML_RISK_SCORING=true
ENABLE_FIREFIGHTER_MONITORING=true
ENABLE_REAL_TIME_SYNC=false

# ==================== Monitoring ====================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
SENTRY_DSN=

# ==================== Docker/Kubernetes ====================
VERSION=1.0.0
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
